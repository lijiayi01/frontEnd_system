{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "declarationDir": "./d",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"],
    },
    "typeRoots": [
      "./types"
   ],
  },
  "include": ["src", "types"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
